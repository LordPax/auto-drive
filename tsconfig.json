{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build/",
        "target": "es2019",
        "strict": false,
        "lib": [
            "es5",
            "dom"
        ]
    },
    "include": [
        "main.ts",
        "mainTrain.ts",
        "src/showCanvas.ts",
        "src/editCanvas.ts",
        "src/include/prompt.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
